<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="file-type">log</Property>
        <Property name="file-prefix">client</Property>
        <Property name="pattern">%d{HH:mm:ss.SSS} [%level] {%tid (%t)} [%class{1}] - %msg%n</Property>
    </Properties>

    <Appenders>
        <!-- Console Appender -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="${pattern}" />
        </Console>

        <!-- File Appender -->
        <File name="File" fileName="logs/${file-prefix}.${file-type}" append="true">
            <PatternLayout pattern="${pattern}" />
        </File>
    </Appenders>

    <Loggers>
        <!-- Root Logger -->
        <Root level="ALL">
            <AppenderRef ref="Console" />
            <AppenderRef ref="File" />
        </Root>
    </Loggers>
</Configuration>
